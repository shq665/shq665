<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="big_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/defaultTitleTextColor</item>
    </style>

    <style name="title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="normal_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>
</resources>